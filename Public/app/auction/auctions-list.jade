.container
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Title
                th Published Date
                th Duration
                th Update
                th Delete
                th Place a bid
        tbody
        tr(ng-repeat="auction in auctions")
            td {{auction.title}}
            td {{auction.createdDate | date}}
            td {{auction.duration | date}}
            td
                button.btn.btn-default(ng-click="updateAuction(auction._id)") Update
            td
                button.btn.btn-default(ng-click="deleteAuction(auction)") Delete
            td
                button.btn.btn-default(ng-click="placeBid(auction._id)") Place Bid