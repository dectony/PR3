.container
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Title
                th Update
                th Remove
        tbody
        tr(ng-repeat="car in cars")
            td {{car.title}}
            td
                button.btn.btn-primary(ng-click="updateCar(car._id)") Update
            td
                button.btn.btn-primary(ng-click="deleteCar(car)") Delete
